CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c = .o)
NAME = school
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(OBJ)
        $(CC) $(CFLAGS) $(OBJ) -o $(NAME)

.PHONY: clean oclean fclean re
clean:
	-$(RM) -f $(wildcard *\~) $(wildcard *.swp) $(NAME)
oclean:
	-$(RM) -f $(OBJ)
fclean:
	-$(RM)  -f *\~ *swp $(NAME) $(OBJ)
re: oclean all
